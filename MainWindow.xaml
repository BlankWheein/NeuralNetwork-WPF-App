<Window x:Class="New_WPF_APP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:New_WPF_APP"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1200">
    <Grid x:Name="Container" Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>

        </Grid.ColumnDefinitions>


        <Button Click="Create_Neural_Network" x:Name="NNButton" Grid.Column="0" Content="" Grid.Row="0" FontSize="20"></Button>
        <Button Click="Train_NN" x:Name="trainer" Grid.Column="1" Grid.Row="0" FontSize="20" Content="Train for 1 Epoch"></Button>
        <Canvas x:Name="InputCanvas" Grid.ColumnSpan="3" Grid.Row="1"/>
        <Canvas x:Name="HiddenCanvas" Grid.ColumnSpan="3" Grid.Row="1"/>
        <Canvas x:Name="OutputCanvas" Grid.ColumnSpan="3" Grid.Row="1"/>
        <Canvas x:Name="LineCanvas" Grid.ColumnSpan="3" Grid.Row="1"/>




    </Grid>
</Window>
